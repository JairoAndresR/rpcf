Table books{
  isbn VARCHAR [pk]
  name VARCHAR
  published_country VARCHAR
  published_year datetime
  editorial VARCHAR
}

Table book_authors{
  id_book bigint [ref: > books.isbn]
 id_author string [ref: > authors.id]
}

Table articles{
  id VARCHAR(36) [pk]
  name VARCHAR
  published_country VARCHAR
  magazine_name VARCHAR
  magazine_issn int
  published_year datetime
  vol int
  fasc int
  pags VARCHAR
  doi VARCHAR
}

Table article_authors{
  article_id int [ref: > articles.id]
