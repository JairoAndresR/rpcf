  end_date datetime
  scope VARCHAR
  participation_type VARCHAR
  associated_institutions VARCHAR
}

Table institutions {
  id int [pk]
  name VARCHAR
  description VARCHAR
}

Table insititution_event{
  id_institution int [pk, ref: > institutions.id]
